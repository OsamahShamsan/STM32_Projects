#ifndef UART_DMA_H
#define UART_DMA_H

#include "stm32g4xx_hal.h"
#include <stdint.h>
#include <stdbool.h>

#define UART_RX_BUFFER_SIZE     64
#define UART_TX_QUEUE_SIZE      512   // Total TX buffer size

void uart_dma_init(UART_HandleTypeDef* huart);
void uart_dma_send(const uint8_t* data, uint16_t len);
void uart_dma_handle_idle(void);

#endif // UART_DMA_H
