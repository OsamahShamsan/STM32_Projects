// === menu.h ===
#ifndef MENU_H
#define MENU_H

#include <stdint.h>

#define ESC_KEY        27
#define ENTER_KEY      '\r'
#define VT100_ESC      "\x1B"
#define MENU_LINES     TOTAL_MENU_LINES

#define MENU_MARKER_NORMAL   "  "
#define MENU_MARKER_SELECTED "> "

#define MENU_START_ROW       6  // If intro ends at line 5

void Menu_Init(void);
void Menu_Display(void);
void Menu_HandleInput(uint8_t input);
void send_line(const char* text, int is_selected);

#endif // MENU_H
